{
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "modules",
    "ecmaFeatures": {}
  },
  "parser": "esprima",
  "rules": {
    "semi": "off",
    "no-shadow-restricted-names": "error",
    "no-unused-vars": "error",
    "comma-spacing": "error",
    "camelcase": "warn",
    "indent": ["error", 2],
    "no-undef": "error",
    "no-global-assign": "error"
  },
  "env": {
    "browser": true,
  },
  "globals": {
    "jsmediatags": true,
    "exports": true
  }
}
